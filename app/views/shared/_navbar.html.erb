<div class="navbar navbar-expand-sm fixed-top navbar-light navbar-lewagon navbar-lewagon-grey">
      <div class="container">
        <%= link_to "/", class: "navbar-brand" do %>
          <span class="circle-icon-nav"><i class="fas fa-comment-dollar"></i></span>
        <% end %>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <% if current_user %>
          <ul id="ul-nav" class="navbar-nav">
              <li class="nav-item">
                <%= link_to "View Your Calendar", bookings_path, class: "nav-link" %>
              </li>

                <span id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="circle-icon-nav"><i class="far fa-user"></i></span>

                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                  <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                  <%= link_to "Edit Account", edit_user_registration_path, method: :get, class: "dropdown-item" %>
                </div>
              </li>
        <% else %>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul id="nav-dropdowns" class="navbar-nav">
              <li class="nav-item">
                <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_session_path, class: "navbar-brand" do %>
                  <span class="circle-icon-nav"><i class="fas fa-sign-in-alt"></i></span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>

