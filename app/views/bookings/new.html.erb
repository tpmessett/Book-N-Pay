<div class="container">
  <div class="page-details">
    <h3>New booking</h3>
    <%= simple_form_for [@customer, @booking] do |f| %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <% options = options_from_collection_for_select(@customers, 'id', 'name') %>
    <%= f.select :customer_id,  options %>
    <%= f.submit "Create booking", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
